{% endblock navbar %}

{% block page %}

<div class="container">
  <h2>Create a new investment</h2>
  <form action="/newinv" onsubmit="return confirm('this would create a new investment. are you sure?');" method="POST">
    <div class="form-group">      
      <label for="project_id">select project:</label>
      <select class="form-control" id="project_id" name="project_id">
        {% for p in proj %}
        <option value="{{p['project_id']}}">{{p['project_name']}}</option>
        {% endfor %} 
      </select>
    </div>
    <div class="form-group">
      <label for="investment"investment amount:</label>
      <input type="numbrt" class="form-control" id="investment" placeholder="investment" name="investment" required >
    </div>
    <div class="form-group">
      <label for="investment_date">Investment date:</label>
      <input type="date" class="form-control" id="investment_date" placeholder="Investment date" name="investment_date">
    </div>
     <button type="submit" class="btn btn-info">Submit</button>
  </form>
</div> 

{% endblock page %}
